    //    $(document).on('click', '.OutBtn', function () {
    //        const connectionId = $(this).data('id');
    //        peerConnectionId = null;

    //        $(this).prop('disabled', false);
    //        $(this).css('font-weight', normal);

        //});

    //});

</script>

